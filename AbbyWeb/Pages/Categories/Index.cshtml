<div class="container p-4">
	<div class="row pt-3">
		<div class="col-6">
			
			<h2>Categories</h2>
		</div>
		<div class="col-6 text-end">
			<a class="btn btn-primary" asp-page="Create">
				Create Category
			</a>
		</div>
	</div>

	<table width=100% class="table table-bordered table-striped my-5">
		<thead>
			<tr>
				<th>Category Name</th>
				<th>Display Order</th>
			</tr>
		</thead>
		<tbody>
			@foreach(var obj in Model.Categories)
			{
				<tr>
					<td width="50%"> @obj.Name</td>
					<td width="35%"> @obj.DisplayOrder</td>
					<td>
						<a class="btn btn-primary btn-group w-50" asp-page="Edit" asp-route-Id="@obj.Id"><i class="bi bi-pencil-square"></i>Edit</a>
						<a class="btn btn-danger btn-group" asp-page="Delete" asp-route-id="@obj.Id"><i  class="bi bi-trash3"></i></a>
					</td>
				</tr>
			}
			
		</tbody>
	</table>


</div>
